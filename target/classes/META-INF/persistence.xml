<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="bitacoraPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.mycompany.bitacora.logica.PuntoVaciado</class>
    <class>com.mycompany.bitacora.logica.Alumbrado</class>
    <class>com.mycompany.bitacora.logica.CajaLocal</class>
    <class>com.mycompany.bitacora.logica.SeguridadGabinete</class>
    <class>com.mycompany.bitacora.logica.Historial</class>
    <class>com.mycompany.bitacora.logica.ComponentesInternos</class>
    <class>com.mycompany.bitacora.logica.ComponentesOP</class>
    <class>com.mycompany.bitacora.logica.TipoComponentes</class>
    <class>com.mycompany.bitacora.logica.Reparaciones</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bitacora?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
